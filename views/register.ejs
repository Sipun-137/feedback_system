<%- include("partials/header"); -%>

<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /login route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email" >E-mail</label>
              <input type="email" class="form-control new1" name="email">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control new1" name="password">
            </div>
            <button type="submit" class="btn btn-dark " id="log">Register</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer"); -%>
